{
    "compileOnSave": true,
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "outDir": "./built",
        "allowJs": true,
        "module": "es2022",
        "target": "es6",
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "typeRoots": [ "./typings" ]
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./plugins/**/*",
        "./typings/**/*",
        "./built/**/*"
    ]
}